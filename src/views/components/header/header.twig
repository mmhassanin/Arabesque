<header class="store-header">
  {# Main Nav #}
  <div id="mainnav" class="main-nav-container shadow-default bg-white">
          <div class="inner bg-inherit">
          <div class="container">
              <div class="flex items-center justify-between w-full">
                  <!-- Left side menu (mobile only) -->
                  <div class="lg:hidden">
                      <a class="mburger mburger--collapse leading-none rtl:ml-4 ltr:mr-4" href="#mobile-menu" aria-label="Open-menu">
                        <i class="sicon-menu text-primary text-2xl"></i>
                      </a>
                  </div>
                  
                  <!-- Desktop menu (left side) -->
                  <div class="hidden lg:flex items-center flex-1">
                      <custom-main-menu></custom-main-menu>
                  </div>
                  
                  <!-- Centered logo -->
                  <div class="flex-shrink-0 mx-4">
                      <a class="navbar-brand block" href="{{ store.url }}">
                          <img fetchpriority="high" width="auto" height="auto" class="h-12 w-auto" loading="eager" src="{{ store.logo }}" alt="{{ store.name }} logo">
                          {% if is_page('index') %}
                            <h1 class="sr-only">{{ store.name }}</h1>
                          {% else %}
                            <h2 class="sr-only">{{ store.name }}</h2>
                          {% endif %}
                      </a>
                  </div>
                  
                  <!-- Right side (empty for now, can be used for cart/account) -->
                  <div class="flex-1 flex justify-end">
                      <!-- Add cart/account buttons here if needed -->
                  </div>
                  </div>
              </div>
          </div>
      </div>    
  </div>
</header>
