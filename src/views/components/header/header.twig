<header class="store-header">
    <div id="mainnav" class="main-nav-container shadow-default bg-white">
        <div class="inner bg-inherit">
            <div class="container">
                <div class="flex items-stretch justify-between relative">
                    <!-- Right Side Items (Menu) -->
                    <div class="flex items-center space-x-4 rtl:space-x-reverse">
                        <a class="lg:hidden mburger mburger--collapse leading-none rtl:ml-4 ltr:mr-4" href="#mobile-menu" aria-label="Open-menu">
                            <i class="sicon-menu text-primary text-2xl"></i>
                        </a>
                        <salla-menu
                            source="header"       {# يجلب عناصر قائمة رأس الصفحة تلقائياً #}
                            class="flex gap-4 rtl:space-x-reverse"
                            topnav>
                        </salla-menu>
                    </div>
                    <!-- Center Logo (New Div) -->
                    <div class="absolute inset-0 flex justify-center items-center pointer-events-none">
                        <a class="navbar-brand custom-logo-center" href="{{ store.url }}">
                            <img fetchpriority="high" width="100%" height="100%" loading="eager" src="{{ store.logo }}" alt="{{ store.name }} logo">
                            {% if is_page('index') %}
                            <h1 class="sr-only">{{ store.name }}</h1>
                          {% else %}
                            <h2 class="sr-only">{{ store.name }}</h2>
                          {% endif %}
                        </a>
                    </div>
                    <!-- Left Side Items (Cart, Icons) -->
                    <div class="flex items-center space-x-4 rtl:space-x-reverse">
                        <!-- Cart Icon -->
                        ...
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>